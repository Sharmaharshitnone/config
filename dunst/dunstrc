[global]
    # Font
    font = JetBrainsMono Nerd Font 11

    # Allow a small subset of html markup:
    #   <b>bold</b>
    #   <i>italic</i>
    #   <s>strikethrough</s>
    #   <u>underline</u>
    #
    #   <a href="URL">URL</a>
    markup = full

    # The format of the message.  Possible variables:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    format = "<b>%s</b>\n%b"

    # Sort messages by urgency.
    sort = yes

    # Show how many messages are currently hidden (because of geometry).
    indicate_hidden = yes

    # Alignment of message content.
    alignment = left

    # Show age of message if message is older than show_age_threshold
    # seconds.  Set to -1 to disable.
    show_age_threshold = 60

    # Split notifications into multiple lines if they don't fit into
    # geometry.
    word_wrap = yes

    # Ignore newlines '\n' in notifications.
    ignore_newline = no

    # Merge multiple notifications with the same content
    stack_duplicates = true
    hide_duplicate_count = false

    # The geometry of the window:
    #   [{width}]x{height}[+/-{x}[+/-{y}]]
    width = (300, 450)
    height = (0, 300)
    origin = top-right
    offset = (50, 50)

    # Shrink window if it's smaller than the width.  Will be ignored if
    # width is 0.
    shrink = no

    # Don't remove messages, if the user is idle (no mouse or keyboard input)
    # for longer than idle_threshold seconds.
    idle_threshold = 120

    # The transparency of the window.  Range: [0; 100].
    # This setting will only work if a compositing manager is running (e.g. xcompmgr, compiz, etc.)
    transparency = 20

    # Draw a line of "separator_height" pixel height between two
    # notifications.
    # Set to 0 to disable.
    separator_height = 2

    # Padding between text and separator.
    padding = 12
    horizontal_padding = 12

    # Scale factor. It is auto-detected if value is 0.
    scale = 0

    # Frame
    frame_width = 1
    # Muted gray border — no accent color screaming at you
    frame_color = "#555555"
    separator_color = frame
    corner_radius = 6

    # Icon settings
    icon_position = left
    min_icon_size = 32
    max_icon_size = 64
    text_icon_padding = 12

    # Progress bar
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 4

    # Apps
    dmenu = ~/.config/dunst/scripts/dunst_click.sh -p dunst:
    browser = /usr/bin/xdg-open
    always_run_script = true
    title = Dunst
    class = Dunst
    ignore_dbusclose = false

    # Mouse
    mouse_left_click = context, close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

# Experimental features.
[experimental]
    per_monitor_dpi = false

# Urgency settings — Pure Dark Monochrome

[urgency_low]
    # Near-black background, muted gray text, subtle border
    background = "#111111"
    foreground = "#999999"
    frame_color = "#333333"
    timeout = 5

[urgency_normal]
    background = "#111111"
    foreground = "#d4d4d4"
    frame_color = "#555555"
    timeout = 10

[urgency_critical]
    # Dark red bg, bright text — only urgency that gets real color
    background = "#331111"
    foreground = "#d4d4d4"
    frame_color = "#cc6666"
    timeout = 0

# ── Keyboard RGB glow on notifications ──
# Wrapper script receives urgency as $5 from dunst.
# Toggle with: kb-rgb glow-toggle
# Requires: /etc/sudoers.d/kb-rgb for NOPASSWD

[kb-glow]
    summary = "*"
    script = /home/akanksha/config/dunst/scripts/kb-rgb-glow
