#!/bin/bash
# yay-fzf-install - Interactive AUR package installer with fzf

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
BOLD='\033[1m'
RESET='\033[0m'

# Check Dependencies
if ! command -v yay >/dev/null 2>&1; then
    echo -e "${RED}${BOLD}Error:${RESET} yay is required but not installed."
    exit 1
fi

if ! command -v fzf >/dev/null 2>&1; then
    echo -e "${RED}${BOLD}Error:${RESET} fzf is required but not installed."
    exit 1
fi

fzf_args=(
  --multi
  --preview 'yay -Sia {1}'
  --preview-label='alt-p: toggle | alt-b/B: PKGBUILD | alt-j/k: scroll | tab: multi-select'
  --preview-label-pos='bottom'
  --preview-window 'down:65%:wrap'
  --bind 'alt-p:toggle-preview'
  --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
  --bind 'alt-k:preview-up,alt-j:preview-down'
  # Switch preview to PKGBUILD syntax highlighting if bat is installed, else cat
  --bind 'alt-b:change-preview:yay -Gp {1} | bat --language=bash --color=always --style=numbers 2>/dev/null || yay -Gp {1}'
  --bind 'alt-B:change-preview:yay -Sia {1}'
  --color 'fg+:blue,bg+:black,hl:yellow,pointer:cyan,marker:cyan,header:blue'
  --prompt='Select AUR packages > '
  --header='TAB: select multiple | ALT-b: PKGBUILD | ENTER: install | ESC: cancel'
)

# Load package list
# -Slqa: Sync list, quiet, AUR only
echo -e "${BLUE}${BOLD}::${RESET} Loading AUR package list..."
pkg_names=$(yay -Slqa | fzf "${fzf_args[@]}")

if [[ -n "$pkg_names" ]]; then
  mapfile -t pkg_array <<< "$pkg_names"
  
  echo -e "\n${BLUE}${BOLD}::${RESET} Preparing to install ${YELLOW}${pkg_array[*]}${RESET}..."
  
  # Run yay directly (yay handles sudo itself)
  # -S: Install
  # --needed: Skip up-to-date packages
  if yay -S --needed "${pkg_array[@]}"; then
      echo -e "\n${GREEN}${BOLD}✓ Installation complete.${RESET}"
      # Optional: update locate database if installed
      if command -v updatedb >/dev/null 2>&1; then
          sudo updatedb
      fi
  else
      echo -e "\n${RED}${BOLD}✗ Installation failed or cancelled.${RESET}"
  fi
  
  echo -e "\n${BLUE}Press any key to exit...${RESET}"
  read -n 1 -s -r
fi