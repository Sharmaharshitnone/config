#!/bin/bash
# pacman-fzf-install - Interactive pacman package installer with fzf

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
BOLD='\033[1m'
RESET='\033[0m'

# 1. Dependency Check
if ! command -v fzf >/dev/null 2>&1; then
    echo -e "${RED}${BOLD}Error:${RESET} fzf is required but not installed."
    exit 1
fi

fzf_args=(
  --multi
  --preview 'pacman -Si {1}'
  --preview-label='alt-p: toggle preview | alt-j/k: scroll | tab: multi-select'
  --preview-label-pos='bottom'
  --preview-window 'down:65%:wrap'
  --bind 'alt-p:toggle-preview'
  --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
  --bind 'alt-k:preview-up,alt-j:preview-down'
  --color 'fg+:blue,bg+:black,hl:yellow,pointer:green,marker:green,header:blue'
  --prompt='Select packages > '
  --header='TAB: select multiple | ENTER: install | ESC: cancel'
)

# 2. Package Selection
# We use command substitution to capture the selected packages.
# pacman -Slq lists all packages from synced repositories.
echo -e "${BLUE}${BOLD}::${RESET} Loading package list from repositories..."
selected_packages=$(pacman -Slq | fzf "${fzf_args[@]}")

# 3. Installation
# Check if user selected anything (if string is non-empty)
if [[ -n "$selected_packages" ]]; then
    # Convert newline-separated string into a bash array
    mapfile -t pkg_array <<< "$selected_packages"
    
    # Run pacman directly.
    # We use --color=always to force pacman to be colorful even if it thinks it's being scripted (though here it's direct TTY).
    echo -e "\n${BLUE}${BOLD}::${RESET} Preparing to install ${YELLOW}${pkg_array[*]}${RESET}..."
    echo
    
    if sudo pacman -S --color=always --needed "${pkg_array[@]}"; then
        echo -e "\n${GREEN}${BOLD}✓ Installation complete.${RESET}"
    else
        echo -e "\n${RED}${BOLD}✗ Installation failed or cancelled.${RESET}"
    fi
    
    # Wait for user input before closing (useful if run from a launcher)
    echo -e "\n${BLUE}Press any key to exit...${RESET}"
    read -n 1 -s -r
fi