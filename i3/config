set $mod Mod4
font pango:JetBrainsMono Nerd Font 8

default_border pixel 0
default_floating_border pixel 1

# Dependency validation (1% Standard: fail-fast)
exec --no-startup-id bash -c 'missing=""; for cmd in xdotool ffmpeg pactl xwallpaper; do command -v $cmd >/dev/null || missing="$missing $cmd"; done; [ -n "$missing" ] && notify-send -u critical "Missing Dependencies" "Install:$missing" || true'

exec --no-startup-id unclutter -idle 1 -root &
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet
exec --no-startup-id dunst
exec --no-startup-id sh -c 'DISPLAY=:0 clipmenud 2>/dev/null &'
exec --no-startup-id udiskie --tray &
exec --no-startup-id ~/.config/i3/scripts/start-polkit-agent.sh &
exec --no-startup-id xwallpaper --zoom ~/Pictures/wallpapers/General/wallhaven-6llve6.png
exec --no-startup-id ~/.config/i3/scripts/multi-monitor.sh &
exec_always --no-startup-id picom -b

# Touchpad configuration - enable tap-to-click on all detected touchpads
exec --no-startup-id bash -c 'for dev in $(xinput list --name-only | grep -i touchpad); do xinput set-prop "$dev" "libinput Tapping Enabled" 1 2>/dev/null; done'

workspace_auto_back_and_forth yes
focus_on_window_activation smart
for_window [all] title_window_icon on

# ── Quick Navigation ──────────────────────────────────────────
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+x [urgent=latest] focus
bindsym $mod+minus scratchpad show
bindsym $mod+Shift+minus move scratchpad
# Rust: single daemon for alternating layouts + workspace naming
exec_always --no-startup-id ~/.config/i3/scripts/i3-helper/target/release/i3-helper

# For recording screen
bindsym $mod+Shift+Print exec --no-startup-id ~/.config/i3/scripts/record.sh toggle

# For recording screen with microphone + system audio
bindsym $mod+Control+Shift+Print exec --no-startup-id ~/.config/i3/scripts/record-with-mic.sh toggle

# ── Mode labels (displayed in bar when active) ────────────────
set $app_launcher     Apps: [f]irefox [t]hunar [c]ode [g]chrome [m]usic [y]azi [b]c [o]bs [p]avuctl [v]lc [z]athura [h]top [l]azygit [d]ocker [s]ound [r]ss
set $nvim_launcher    Nvim: [l]eetcode [w]ork [c]onfig [n]otes [t]asks [d]calcurse 
set $copy_mode        Copy: [x]pass [b]chars [c]lipboard
set $tiling_mode      Tiling: [a]lternating [v]ertical [h]orizontal [s]plitv [d]splith

include ~/.config/i3/config.d/*.conf

# Power: $mod+Shift+Delete → confirm before shutdown
set $power_mode  Power: [s]hutdown [r]eboot [l]ock [Esc]cancel
bindsym $mod+Shift+Delete mode "$power_mode"
mode "$power_mode" {
    bindsym s exec --no-startup-id shutdown -h now; mode "default"
    bindsym r exec --no-startup-id reboot; mode "default"
    bindsym l exec --no-startup-id i3lock; mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

gaps inner 10
smart_gaps on
hide_edge_borders smart

bindsym $mod+Ctrl+plus gaps inner all plus 5
bindsym $mod+Ctrl+minus gaps inner all minus 5


# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# start a terminal
bindsym $mod+Return exec kitty
bindsym $mod+Control+Return exec kitty tmux attach
bindsym $mod+Shift+Return exec open-term-same-dir


# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher) — theme from shared dmenu-theme.sh
bindsym $mod+d exec --no-startup-id bash -c '. ~/.config/i3/scripts/dmenu-theme.sh && dmenu_run_themed'

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 gracefully (logs you out of your X session and returns to ly)

bindsym $mod+Shift+e exec "pkill -TERM clipmenud; pkill -TERM picom; pkill -TERM xsel; sleep 0.2; i3-msg exit"
# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

set $text      #d4d4d4
set $subtext1  #999999
set $base      #111111
set $overlay1  #666666
set $maroon    #cc6666

bindsym $mod+r mode "resize"
bindsym $mod+m bar mode toggle


bar {
        i3bar_command i3bar --transparency
        status_command i3status-rs ~/.config/i3status-rust/config.toml 
        font pango:JetBrainsMono Nerd Font 11
        strip_workspace_numbers no
        position top
	mode hide
	padding 0
        hidden_state hide
        modifier $mod+Mod1
         colors {
        # background #282828
	background #00000000
        statusline #cdd6f4
        separator #00000000

        # target             border          bg            text
        focused_workspace    $base         #00000000    $text
        active_workspace     #00000000   #00000000    $subtext1
        inactive_workspace   #00000000   #00000000    $overlay1
        urgent_workspace     #00000000   #00000000    $maroon
    }

}

