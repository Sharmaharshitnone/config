#!/bin/bash
# pacman-fzf-install - Interactive pacman package installer with fzf

fzf_args=(
  --multi
  --preview 'pacman -Si {1}'
  --preview-label='alt-p: toggle preview | alt-j/k: scroll | tab: multi-select'
  --preview-label-pos='bottom'
  --preview-window 'down:65%:wrap'
  --bind 'alt-p:toggle-preview'
  --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
  --bind 'alt-k:preview-up,alt-j:preview-down'
  --color 'pointer:green,marker:green'
  --prompt='Select packages to install > '
  --header='Press TAB to select multiple | ENTER to install | ESC to cancel'
)

pkg_names=$(pacman -Slq | fzf "${fzf_args[@]}")

if [[ -n "$pkg_names" ]]; then
  echo "$pkg_names" | tr '\n' ' ' | xargs sudo pacman -S --needed
  echo -e "\nâœ“ Installation complete. Press ENTER to exit..."
  read
fi