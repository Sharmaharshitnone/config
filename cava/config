## Cava Config 2025 - Arch Elite Edition
## Location: ~/.config/cava/config

[general]
# Match your monitor refresh rate. Your i7 can handle this easily.
framerate = 144
# Automatic sensitivity adjustment (essential for quiet vs loud songs)
autosens = 1
# 0 = auto-detect terminal width.
bars = 0
bar_width = 3
bar_spacing = 1
# Sleep when no sound (save battery)
sleep_timer = 5
sensitivity = 85
autosens = 1


[input]
# Arch Standard 2025 is Pipewire, but 'pulse' is the compat layer.
method = pulse
source = auto

[output]
method = ncurses
# Stereo looks cooler (Left/Right separation)
style = stereo


[color]
# The "Hyper-Gradient" Mode
gradient = 1
gradient_count = 8

# A cool "Cyber-Frost" Gradient (Teal -> Blue -> Pink -> Red)
gradient_color_1 = '#94e2d5'
gradient_color_2 = '#89dceb'
gradient_color_3 = '#74c7ec'
gradient_color_4 = '#89b4fa'
gradient_color_5 = '#cba6f7'
gradient_color_6 = '#f5c2e7'
gradient_color_7 = '#f2cdcd'
gradient_color_8 = '#f38ba8'

[smoothing]
# The "Monstercat" algorithm makes bars fall smoothly instead of jittering
monstercat = 1
waves = 0
gravity = 100
integral = 50
scale = auto